# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# YAML files
[*.{yaml,yml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# CSS, SCSS, JS, TS, HTML files
[*.{css,scss,js,ts,html}]
indent_size = 2

# Makefiles use real tabs
[Makefile]
indent_style = tab

# Batch files use CRLF
[*.bat]
end_of_line = crlf
